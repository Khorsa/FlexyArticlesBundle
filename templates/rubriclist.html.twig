{% extends '@FlexyAdminFrame/adminpanelbase.html.twig' %}
{% block content %}

    <div class="admin-btn-top">
        {% if parentId %}
            <a href="{{ path('admin_articlerubrics') }}" class="btn btn-primary back btn"><i class="fas fa-arrow-left"></i><br>Вернуться</a>
            <a href="{{ path('admin_articlerubrics_unlinklist', {rubricId: parentId}) }}" class="btn btn-danger collect-selection" data-title="Подтвердите действие" data-message="Убрать из рубрики выбранные статьи? (сами статьи удалены не будут)"><i class="far fa-minus-square"></i><br>Удалить<br>выбранное</a>
        {% else %}
            <a href="{{ path('admin_articlerubrics_create') }}" class="btn btn-success"><i class="fas fa-folder-plus"></i><br>Добавить<br>рубрику</a>
            <a href="{{ path('admin_articlerubrics_deletelist') }}" class="btn btn-danger collect-selection" data-title="Подтвердите действие" data-message="Удалить выбранные рубрики? (содержащиеся в них статьи удалены не будут)"><i class="far fa-minus-square"></i><br>Удалить<br>выбранное</a>
        {% endif %}
    </div>

    <table class="flexy-table" data-ajax="{{ ajax }}" data-serverside="true" data-checkboxes="true">
        <thead>
        <tr>
            <th data-searchable="false" data-orderable="false" data-type=""></th> {# Чекбокс #}
            <th data-searchable="false" data-orderable="false" data-type=""></th> {# Кнопки #}
            <th data-searchable="true" data-orderable="true" data-type="string">Название</th>
            <th data-searchable="true" data-orderable="true" data-type="string">Тип/раздел</th>
            <th data-searchable="false" data-orderable="true" data-type="datetime">Дата изменения</th>
            <th data-searchable="true" data-orderable="true" data-type="string">Код</th>
        </tr>
        </thead>
    </table>

{% endblock %}