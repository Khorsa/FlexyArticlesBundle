{% extends '@FlexyAdminFrame/adminpanelbase.html.twig' %}
{% block content %}

    <div class="admin-btn-top">
        {% if parentId %}
            <a href="{{ path('admin_articlecategories', {'parentid': upId}) }}" class="btn btn-primary back btn"><i class="fas fa-arrow-left"></i><br>Вернуться</a>
            <a href="{{ path('admin_articlecategories_deletelist') }}" class="btn btn-danger collect-selection" data-title="Подтвердите действие" data-message="Удалить выбранные объекты и их содержание?"><i class="far fa-minus-square"></i><br>Удалить<br>выбранное</a>

            <a href="{{ path('admin_articlecategories_create', {'parentid': parentId}) }}" class="btn btn-success"><i class="fas fa-folder-plus"></i><br>Добавить<br>категорию</a>
            <a href="{{ path('admin_articles_create', {'parentid': parentId}) }}" class="btn btn-success"><i class="fas fa-plus"></i><br>Добавить<br>статью</a>
        {% else %}
            <a href="{{ path('admin_articlecategories_create') }}" class="btn btn-success"><i class="fas fa-folder-plus"></i><br>Добавить<br>категорию</a>
            <a href="{{ path('admin_articlecategories_deletelist') }}" class="btn btn-danger collect-selection" data-title="Подтвердите действие" data-message="Удалить выбранные объекты и их содержание?"><i class="far fa-minus-square"></i><br>Удалить<br>выбранное</a>
        {% endif %}
    </div>

    <table class="flexy-table" data-ajax="{{ ajax }}" data-serverside="true" data-checkboxes="true">
        <thead>
        <tr>
            <th data-searchable="false" data-orderable="false" data-type=""></th> {# Чекбокс #}
            <th data-searchable="false" data-orderable="false" data-type=""></th> {# Кнопки #}
            <th data-searchable="true" data-orderable="true" data-type="string">Название</th>
            <th data-searchable="true" data-orderable="true" data-type="string">Тип</th>
            <th data-searchable="false" data-orderable="true" data-type="datetime">Дата изменения</th>
            <th data-searchable="true" data-orderable="true" data-type="string">Код</th>
            <th data-searchable="true" data-orderable="true" data-type="number">Сортировка</th>
        </tr>
        </thead>
    </table>





{% endblock %}